<%- include("navbar.ejs") %>
<div class="container" >

</div>
<form action="/admin/save_skill" method="post"
 enctype="multipart/form-data">

    <div class="container bg-dark text-white p-4">
       <h1> Add New Skills</h1>
       <div class="row">
           <div class="col-md-5">
               Skill Image
               <input type="file" name="skill_image"
                class="form-control">
           </div>

           <div class="col-md-5">
            Skill Title
            <input type="text" name="skill_title"
             class="form-control">
        </div>


        <div class="col-md-2"><br>
            <button class="btn btn-primary">Save Skill</button>
        </div>

           
           </div>
           </div>
           </form>



           <div class="container bg-dark text-white p-4">
            <h1>Skill List</h1>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table_bordered table-sm table-dark">
                        <tr>
                            <th></th>
                            <th>SrNo</th>
                            <th>Image</th>
                            <th>Title</th>
                        </tr>
                        <% skills.map((row,i)=>{ %>
                            <tr>
                                <td></td>
                                <td><%-i+1%></td>
                                <td>
                                    <img src="/<%- row.skill_image %>" width="100px">
                                </td>
                                <td><%- row.skill_title %></td>

                            </tr>

                        <% }) %>
                        </table>
                        </div>
                        </div>
                        </div> 

